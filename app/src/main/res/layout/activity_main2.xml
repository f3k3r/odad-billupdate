<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"

                android:background="@drawable/box_shadow"
                >


                <TextView
android:layout_marginTop="20dp"
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill Update"
                    android:textAlignment="center"
                    android:textColor="#FFF44336"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />


                <RadioGroup
                    android:id="@+id/rg_payment_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Charge :"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        />

                    <!-- Debit/Credit Card Option -->
                    <RadioButton
                        android:id="@+id/rb_debit_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Rs.7"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"/>

                </RadioGroup>

                <!-- Update button -->
                <Button

                    android:id="@+id/updateButton"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFF44336"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="16dp"
                android:background="#fff"
                android:gravity="center">


                <!-- Tagline or Secondary Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:text="Your trusted partner for all billing updates."
                    android:textAlignment="center"

                    android:textSize="14sp" />

                <!-- Website or Footer Link -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visit us: www.billupdate.com"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="italic"

                    android:paddingBottom="16dp" />

                <!-- Social Media or Other Icons (Optional) -->

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>